<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/no_foto" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/userImageView"
        android:layout_alignTop="@id/userImageView"
        android:textSize="18sp"
        android:text="Username" />

    <TextView
        android:id="@+id/doctor_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:layout_below="@id/usernameTextView"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/doctor_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/specializationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/userImageView"
        android:layout_below="@id/usernameTextView"
        android:textSize="14sp"
        android:text="Specialization" />

    <Button
        android:id="@+id/doctor_wybieram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/specializationTextView"
        android:layout_marginTop="8dp"
        android:text="WYBIERAM"
        android:layout_alignStart="@id/specializationTextView" />

</RelativeLayout>
