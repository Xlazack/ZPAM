<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_purple_flower"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="374dp"
        android:layout_height="602dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_text_purple_see_through" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="334dp"
        android:layout_height="583dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        tools:layout_editor_absoluteY="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/chooseAddressButton"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:backgroundTint="#FFFFFF"
                android:text="Dodaj adres"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/settings_userDataButton"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:backgroundTint="#FFFFFF"
                android:text="Zmień dane osobowe"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:iconTint="@color/white" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/settings_backButton"
        android:layout_width="244dp"
        android:layout_height="43dp"
        android:backgroundTint="#FFC107"
        android:text="Powrót"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>