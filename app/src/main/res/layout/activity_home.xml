<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_purple_flower"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="1057dp"
        android:layout_height="719dp"
        app:srcCompat="@drawable/background_text_solid_purple"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="295dp" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="256dp"
        android:layout_height="66dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/background_text_purple_see_through"
        tools:layout_editor_absoluteY="31dp" />

    <TextView
        android:id="@+id/home_dailyTip_text"
        android:layout_width="225dp"
        android:layout_height="37dp"
        android:text="Czy wiedziałeś że...?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/home_newInstanceButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/background_text_light_solid_purple"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="?attr/actionModePasteDrawable" />

    <ImageButton
        android:id="@+id/home_newInstanceButton2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/background_text_light_solid_purple"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="?attr/actionModePasteDrawable" />

    <ImageButton
        android:id="@+id/home_searchButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/background_text_purple_button_home"
        android:backgroundTint="@color/light_yellow"
        app:layout_constraintBottom_toTopOf="@+id/home_newInstanceButton"
        app:layout_constraintEnd_toStartOf="@+id/home_yourFilesButton"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_yourFilesButton"
        app:layout_constraintVertical_bias="0.83"
        app:srcCompat="@android:drawable/ic_search_category_default" />

    <ImageButton
        android:id="@+id/home_yourFilesButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/background_text_purple_button_home"
        android:backgroundTint="@color/light_yellow"
        app:layout_constraintBottom_toTopOf="@+id/home_newInstanceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/home_newInstanceButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84000003"
        app:srcCompat="?android:attr/actionModeFindDrawable" />

    <ImageButton
        android:id="@+id/home_settingsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/background_text_purple_button_home"
        android:backgroundTint="@color/light_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/home_searchButton"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_searchButton"
        app:layout_constraintVertical_bias="0.88"
        app:srcCompat="@android:drawable/ic_menu_manage" />

</androidx.constraintlayout.widget.ConstraintLayout>